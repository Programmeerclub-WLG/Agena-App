# imports

#:import lang get_lang.languages
#:import exit_program exit_script.exit_procedure

#:include credits.kv

# variables

#:set button_width_1 150
#:set bar_height 25
#:set bar_button_color (1, 1, 1, 1)
#:set bar_button_backcolor (.3, .3, .9, 1)
#:set main_color (.25, .25, .5, 1)
#:set standard_tab_width 150

# screen

<BaseScreen>:
    # This is the main screen
    orientation: "vertical"

    tabsscreens_op: tabs_screens

    BoxLayout:
    # This is the top bar
        canvas.before:
            Color:
                rgb: main_color
            Rectangle:
                size: self.size
                pos: self.pos
        height: bar_height
        size_hint: (1, None)
        orientation: "horizontal"

        Button:
            # File
            id: topbar_file
            on_release: dropdown_file.open(self)
            text: lang["topbar_file"]
            color: bar_button_color
            background_color: bar_button_backcolor
            width: button_width_1
            size_hint: (None, 1)
            on_touch_down: app.start_measure_time()
            on_touch_up: app.stop_measure_time()

        DropDown:
            # Dropdown for file
            id: dropdown_file
            size: (0,0)

            Button:
                # Settings
                id: topbar_settings
                text: lang["topbar_settings"]
                background_color: bar_button_backcolor
                height: bar_height
                color: bar_button_color
                size_hint: (1, None)
                on_release: root.open_new_tab("settings")

            Button:
                # Close
                id: topbar_exit
                text: lang["topbar_close"]
                background_color: bar_button_backcolor
                height: bar_height
                color: bar_button_color
                size_hint: (1, None)
                on_release: exit_program()

        Button:
            # Create appointment
            id: topbar_create_appointment
            text: lang["topbar_create_appointment"]
            color: bar_button_color
            background_color: bar_button_backcolor
            width: button_width_1
            size_hint: (None, 1)
            on_release: root.open_new_tab("create_appointment")

        Button:
            # Trash
            id: topbar_trash
            text: lang["topbar_trash"]
            color: bar_button_color
            background_color: bar_button_backcolor
            width: button_width_1
            size_hint: (None, 1)
            on_release: root.open_new_tab("trash")

        Button:
            # Credits
            id: topbar_credits
            text: lang["topbar_credits"]
            color: bar_button_color
            background_color: bar_button_backcolor
            width: button_width_1
            size_hint: (None, 1)
            on_release: root.creditspopup.open()

    BoxLayout:
        # This is the horizontal working area
        orientation: "horizontal"

        TabbedPanel:
            size: (1, 1)
            id: tabs_screens
            do_default_tab: False
            background_color: main_color
            tab_width: standard_tab_width
            canvas:
                Color:
                    rgba: main_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            TabbedPanelItem:
                id: default_tab_tabs_screens
                text: lang["welcome_tab"]
                BoxLayout:
                    Label:
                        text: lang["welcome_text"]
                    Button:
                        on_press: root.close_tab()
                        size_hint: (.25, .125)
                        text: lang["close_tab"]

        Widget:
            # This is the working area horizontal-right
            size_hint: (1, 1)
            canvas.before:
                Color:
                    rgb: (0, 1, 1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

<CreateNewAppointment>:
    text: lang["create_appointment_tab"]
    BoxLayout:
        Label: # dummy
            text: "Create Appointment"
        Button:
            on_press: root.close_tab()
            size_hint: (.25, .125)
            text: lang["close_tab"]

<RecycleBin>:
    id: recycle_bin
    text: lang["recycle_bin_tab"]
    BoxLayout:
        Label: # dummy
            text: "Recycle Bin"
        Button:
            on_press: root.close_tab()
            size_hint: (.25, .125)
            text: lang["close_tab"]

<ProgramSettings>:
    id: settings
    text: lang["settings_tab"]
    BoxLayout:
        Label: # dummy
            text: "Settings"
        Button:
            on_press: root.close_tab()
            size_hint: (.25, .125)
            text: lang["close_tab"]

<Appointment>:
    text: "<appointment-name>"
    BoxLayout:
        Label: # dummy
            text: "Appointment"
        Button:
            on_press: root.close_tab()
            size_hint: (.25, .125)
            text: lang["close_tab"]